{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "asom",
  "version": "0.2.6",
  "identifier": "com.illkle.asom",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run generate"
  },
  "app": {
    "windows": [
      {
        "decorations": false,
        "zoomHotkeysEnabled": true,
        "title": "asom",
        "width": 1200,
        "height": 800,
        "minHeight": 600,
        "minWidth": 800,
        "resizable": true,
        "hiddenTitle": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "requireLiteralLeadingDot": false,
          "allow": [
            "*/**",
            "/home/**"
          ]
        }
      }
    }
  },
  "bundle": {
    "createUpdaterArtifacts": true,
    "active": true,
    "targets": "all",
    "icon": [
      "icons/icon.ico",
      "icons/icon.icns",
      "icons/128x128@2x.png"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDE0MEE2OEYzQ0VGRkM0Q0MKUldUTXhQL084MmdLRk9aeXFObTBrS1Jya3R2RUxVSnNNSysxSFJydUUxaCszTkxjMXdYZnFOUFgK",
      "endpoints": [
        "https://github.com/illkle/asom/releases/latest/download/latest.json"
      ]
    }
  }
}